<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:BoardGames.MAUIClient.Models"

             x:Class="BoardGames.MAUIClient.Views.GenrePage"
             Title="GenrePage">
    <StackLayout>
        <StackLayout BindingContext="{Binding Genre}">
            <Label Text="Имя" />
            <Entry Text="{Binding Name}" FontSize="Medium" />
        </StackLayout>
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
            <Button Text="Сохранить" Command="{Binding SaveGenreCommand}"
                                     IsEnabled="{Binding IsValid}"/>
            <Button Text="Удалить" Command="{Binding DeleteGenreCommand}"/>
            <Button Text="Назад" Command="{Binding BackCommand}" />
        </StackLayout>
    </StackLayout>
</ContentPage>